<h2 class="title is-4">All Characters</h2>
<% if @characters.empty?%>
  <p>There are no characters available.</p>
<% else %>
  <% @characters.each do |character| %>
      <div class="card">
        <div class="card-content">
          <h4 class="title is-4"><%= link_to character.name, character_path(character) %></h4>
        </div>
      </div>
  <% end %>
  <div class="paginate">
    <%= paginate @characters %>
  </div>
<% end %>

