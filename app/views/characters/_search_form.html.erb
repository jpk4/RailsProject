<%= form_with(url: search_char_path, local: true, method: "get", class:'search-form') do %>
  <div class="field has-addons">
    <div class="control">
      <%= text_field_tag(:search_char, nil, class:'input', placeholder: 'Search Characters') %>
    </div>
    <div class="control">
      <span class="select">
        <%= select_tag "search_id", options_from_collection_for_select(House.all.order(:name), "id", "name"), prompt: "Filter By House" %>
      </span>
    </div>
    <div class="control">
      <%= submit_tag("Search", class: "button is-primary") %>
    </div>
  </div>
<% end %>
