<h2 class="title is-4">All House and Character Titles</h2>
<% if @titles.empty?%>
  <p>There are no titles available.</p>
<% else %>
  <% @titles.each do |title| %>
    <div class="card">
      <div class="card-content">
        <h4 class="title is-4"><%= link_to title.name, title_path(title) %></h4>
      </div>
    </div>
  <% end %>
  <div class="paginate">
    <%= paginate @titles %>
  </div>
<% end %>