<h2 class="title is-4">All Books in 'A Song of Ice and Fire' Series</h2>
<% if @books.empty?%>
  <p>There are no books available.</p>
<% else %>
  <% @books.each do |book| %>
    <div class="card">
      <div class="card-content">
        <h4 class="title is-4"><%= link_to book.name, book_path(book) %></h4>
      </div>
    </div>
  <% end %>
<% end %>